<h1>Welcome to RAGBOT</h1>

<turbo-frame id="chat-container" class="container d-flex flex-column" data-controller="chat">
  <div id="chat-responses" class="flex-grow-1 overflow-auto p-3" data-chat-target="responses">
    <div class="text-center mt-5">
      <p class="alert alert-info">Start by uploading your research paper and asking a query!</p>
    </div>
  </div>

  <!-- Loading spinner, initially hidden -->
  <div id="loading" class="text-center mt-3" data-chat-target="loading" style="display: none;">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <!-- Include the form partial here -->
  <%= render "chats/form" %>
</turbo-frame>
